<main class="all-list">
  <div class="container">
  
    <div class="row">
      <h2 class="center-align">All pets</h2>
      <p class="center-align">Find all the pets looking for a loving home today!</p>
      <p class="center-align">Click on my picture below to find out more about me!</p>
    </div>

   <div class="row">
      <div class="carousel">
        {{#each pets}}
        <a class="carousel-item center" href="/pet/{{this.id}}"><img src="/images/{{this.type}}-generic.jpeg">{{this.name}}</a>
        {{/each}}
      </div>
   </div>

    <div class="row">
      <div class="s12 m6">
        <table class="align-center z-depth-4">
          <tr>
            <th></th>
            <th>Name</th>
            <th>Type</th> 
            <th>Breed</th>
            <th>Age</th>
          </tr>
          {{#each pets}}
            <tr>
              <td></td>
              <td><a href="/pet/{{this.id}}">{{this.name}}</a></td>
              <td><a href="/pet/{{this.id}}">{{this.type}}</a></td> 
              <td><a href="/pet/{{this.id}}">{{this.breed}}</a></td>
              <td><a href="/pet/{{this.id}}">{{this.age}}</a></td>
            </tr>
          </a>
          {{/each}}
        </table>
