          <li class="collection-header center"><h4>Available Animals</h4></li>
          {{#each pets}}
          <li class="collection-item center-align">
            <a href="/pet/{{this.id}}">{{this.name}} | {{this.type}}</a>
          </li>
          {{/each}}
        </ul> --}}
      </div>
    </div>

</main> 
